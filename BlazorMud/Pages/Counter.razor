@page "/counter"

<PageTitle>Counter</PageTitle>

<MudText Typo="Typo.h1">Counter</MudText>

<MudText Class="my-6">Current count: @currentCount</MudText>

<MudButton Variant="Variant.Outlined" StartIcon="@Icons.Material.Filled.PlusOne" Color="Color.Primary" @onclick="IncrementCount">Click me</MudButton>
@code {
    private int currentCount = 0;

    private void IncrementCount()
    {
        currentCount++;
    }
}
